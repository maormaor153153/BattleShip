<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66FF99"
    tools:context="com.example.orenshadmi.myapplication.Activities.resultActivity">

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:text="WhoWinner"
        android:gravity="center"
        android:textSize="100dp" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/levels"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:background="@drawable/shape"
            android:text="@string/Again" />

        <Button
            android:id="@+id/return_to_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:text="Return to Menu" />




    </LinearLayout>

    <TextView
        android:layout_below="@id/buttons"
        android:id="@+id/broke_a_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>


    <RelativeLayout
        android:id="@+id/texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/broke_a_record"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >




    <EditText
        android:textSize="60dp"
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Please enter your name"
        />

    </RelativeLayout>

    <Button
        android:id="@+id/request_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/location_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="getlocation" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status"
        android:layout_marginTop="22dp"
        android:text="Coordinates:" />


</RelativeLayout>
